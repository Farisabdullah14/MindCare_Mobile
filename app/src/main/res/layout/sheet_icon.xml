<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="3dp"
    android:layout_marginLeft="20dp"
    >


    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="10dp"
        android:textStyle="bold"
        android:orientation="vertical"
        android:layout_gravity="center"
        android:textSize="19dp"
        android:layout_marginBottom="20dp"
        android:text="Bagaimana Perasaanmu?" />
    <LinearLayout
        android:id="@+id/moodharian"
        android:layout_width="354dp"
        android:layout_height="138dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/harianinput"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Terima kasih hari ini sudah mencatat mood anda, semoga harimu semakin baik setiap harinya :) "
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/mood1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onIconClicked"
                android:src="@drawable/emoji5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Sangat Buruk" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mood2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onIconClicked"
                android:src="@drawable/emoji4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Buruk" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/mood3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onIconClicked"
                android:src="@drawable/emoji3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Normal" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mood4"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onIconClicked"
                android:src="@drawable/emoji2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Baik" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mood5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/icon5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:onClick="onIconClicked"
                android:src="@drawable/emoji1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sangat Baik"
                android:gravity="center"
                />

        </LinearLayout>

    </LinearLayout>



</LinearLayout>
