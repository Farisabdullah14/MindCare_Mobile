<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="7dp"
    android:background="@color/transparent"
    tools:context=".Activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:layout_alignParentRight="true"

                android:id="@+id/Button_id_konselor_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/colorCard"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_konselor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:layout_toEndOf="@+id/gambar"
                    android:text="Cerita Kesehatan"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/kontak_konselor"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_konselor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/gambar"
                    android:text="Mega Regency"
                    android:textColor="#FFFFFFFF"
                    android:textSize="13sp" />

                <id.ac.polman.astra.kelompok2MI2B.mindcare.helper.LinkifiedTextView
                    android:id="@+id/link_kontak"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/kontak_konselor"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="https://maps.google.com"
                    android:autoLink="web"
                    android:layout_toEndOf="@+id/gambar"

                    android:textColorLink="@color/black"
                    android:textSize="10sp" />


                <ImageView
                    android:id="@+id/gambar"
                    android:layout_width="105dp"
                    android:layout_height="102dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>