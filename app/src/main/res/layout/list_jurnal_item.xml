<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/transparent"
    tools:context=".Activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:id="@+id/Button_id_jurnal_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6eb6ff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_jurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:layout_toEndOf="@+id/imageJurnal"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="Cerita Kesehatan"
                    android:textColor="#FFFFFFFF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/jenis_jurnal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_jurnal"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/imageJurnal"
                    android:text="Kesehatan Mental"
                    android:textColor="#FFFFFFFF"
                    android:textSize="12dp" />



                <TextView
                    android:id="@+id/konten_jurnal"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_jurnal"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:layout_toEndOf="@+id/imageJurnal"
                    android:text="Kalender"
                    android:textColor="#61677A"
                    android:textSize="9sp" />

                <ImageView
                    android:id="@+id/imageJurnal"
                    android:layout_width="102dp"
                    android:layout_height="110dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/profile" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>