<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/bg_full"
        android:id="@+id/fragment_home">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:paddingBottom="20dp"
            android:layout_marginTop="30dp"
            >

            <TextView
                android:id="@+id/hello"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="85dp"
                android:text="Selamat Datang"
                android:textColor="#fff"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/nama_user"
                android:layout_width="138dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/hello"
                android:layout_marginStart="85dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="100dp"
                android:ellipsize="end"
                android:fontFamily="sans-serif-black"
                android:maxLines="1"
                android:text="Nama user"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />


            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/profile" />

            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:background="@drawable/profile" />




            <ImageView
                android:id="@+id/notif"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                app:srcCompat="@drawable/icon_notif" />

            <TextView
                android:id="@+id/textNotif"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="1dp"
                android:text="00"
                android:textSize="13dp"
                android:textColor="@color/white"

                />


            <ImageView
                android:id="@+id/keluar"
                android:layout_width="32dp"
                android:layout_height="29dp"
                android:layout_alignParentRight="true"
                android:layout_marginTop="2dp"
                android:layout_marginRight="50dp"
                android:background="@drawable/icon_logout" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/hp_layout"
            android:layout_width="440dp"
            android:layout_height="match_parent"
            android:background="@drawable/cvbg"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="375dp"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_marginTop="40dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent">

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#8692f7"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <ImageView
                            android:id="@+id/icon1"
                            android:layout_width="85dp"
                            android:layout_height="74dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"

                            android:background="@drawable/ill_chart" />

                        <TextView
                            android:id="@+id/total_mood_rata"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/icon1"
                            android:layout_alignEnd="@+id/icon1"

                            android:layout_marginStart="12dp"
                            android:layout_marginTop="100dp"
                            android:layout_marginEnd="8dp"
                            android:gravity="center"
                            android:text="0000"
                            android:textColor="#FFFFFF"
                            android:textSize="25dp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text1"
                            android:layout_width="122dp"
                            android:layout_height="46dp"
                            android:layout_alignStart="@+id/total_mood_rata"
                            android:layout_alignEnd="@+id/total_mood_rata"
                            android:layout_marginStart="-41dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginEnd="-37dp"

                            android:gravity="center"
                            android:text="Rata-rata Mood Mingguan"
                            android:textColor="#FFFFFF"
                            android:textSize="16dp" />


                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp"
                    android:layout_weight="1"
                    app:cardBackgroundColor="#8692f7"
                    app:cardCornerRadius="20dp"
                    >

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/mood_mingguan"
                            android:layout_width="110dp"
                            android:layout_height="wrap_content"
                            android:layout_alignStart="@+id/icon2"
                            android:layout_alignEnd="@+id/icon2"
                            android:layout_marginTop="100dp"
                            android:layout_marginEnd="2dp"
                            android:text="0000"
                            android:layout_marginStart="12dp"

                            android:gravity="center"
                            android:textColor="#FFFFFF"
                            android:textStyle="bold"

                            android:textSize="25dp"/>


                        <TextView
                            android:id="@+id/text2"
                            android:layout_width="91dp"
                            android:layout_height="48dp"
                            android:layout_alignStart="@+id/mood_mingguan"
                            android:layout_alignEnd="@+id/mood_mingguan"
                            android:layout_marginStart="-28dp"
                            android:layout_marginTop="130dp"
                            android:layout_marginEnd="-24dp"
                            android:gravity="center"
                            android:text="Mood Mingguan"
                            android:textColor="#FFFFFF"
                            android:textSize="17dp" />

                        <ImageView
                            android:id="@+id/icon2"
                            android:layout_width="85dp"
                            android:layout_height="74dp"
                            android:layout_centerHorizontal="true"
                            android:layout_marginTop="25dp"
                            android:background="@drawable/ill_chart_2" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>





            <RelativeLayout
                android:id="@+id/button_psikolog"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cv2" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/icon_maps" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="20dp"
                    android:text="Psikolog Terdekat dari Kampus Astra"
                    android:textColor="#d703082b"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="55dp"
                    android:text="Yuk kunjugi psikolog terdekat dari Politeknik Astra jika kamu butuh bantuan"
                    android:textColor="#6003082b"
                    android:textSize="10dp" />


            </RelativeLayout>



            <RelativeLayout
                android:id="@+id/button_konselor"
                android:layout_width="match_parent"
                android:layout_height="90dp"

                android:gravity="center_horizontal">

                <ImageView
                    android:layout_width="380dp"
                    android:layout_height="100dp"
                    android:background="@drawable/cv5" />

                <ImageView
                    android:layout_width="65dp"
                    android:layout_height="65dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="25dp"
                    android:background="@drawable/icon_contacts" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="20dp"
                    android:text="Kontak Konselor Kampus Astra"
                    android:textColor="#d703082b"
                    android:textSize="18dp"
                    android:textStyle="bold" />


                <TextView
                    android:layout_width="250dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="105dp"
                    android:layout_marginTop="55dp"
                    android:text="Yuk kunjugi psikolog terdekat dari Politeknik Astra jika kamu butuh bantuan"
                    android:textColor="#6003082b"
                    android:textSize="10dp" />



            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>