<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="5dp"
    android:background="@color/transparent"
    tools:context=".Activity.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="120dp"
            app:cardCornerRadius="15dp">

            <RelativeLayout
                android:id="@+id/Button_id_reminder_01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#6eb6ff"
                android:padding="10dp">

                <TextView
                    android:id="@+id/nama_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Cerita Kesehatan"
                    android:textStyle="bold"
                    android:textColor="#FFFFFFFF"
                    android:textSize="17dp" />

                <TextView
                    android:id="@+id/jenis_reminder"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/nama_reminder"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Kesehatan Mental"
                    android:textColor="#FFFFE8"
                    android:textSize="13dp"
                    android:background="@drawable/circle_background" />


                <TextView
                    android:id="@+id/deskripsi_reminder"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/konten_reminder"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="Apa kabar? bagaimana kisah menarik yang terjadi dalam hidupmu hari ini"
                    android:textColor="#FFFFFFFF"
                    android:textSize="10sp" />



                <id.ac.polman.astra.kelompok2MI2B.mindcare.helper.LinkifiedTextView
                    android:id="@+id/konten_reminder"
                    android:layout_width="195dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/jenis_reminder"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="3dp"
                    android:text="https://maps.google.com"
                    android:autoLink="web"
                    android:textColorLink="@color/black"
                    android:textSize="10sp" />




                <ImageView
                    android:id="@+id/image_reminder"
                    android:layout_width="105dp"
                    android:layout_height="102dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:scaleType="centerCrop"
                    app:cardCornerRadius="50dp"
                    android:src="@drawable/profile" />


            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>



</LinearLayout>